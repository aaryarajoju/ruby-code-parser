source "https://rubygems.org"

# Core parsing
gem "syntax_tree"              # Ruby AST parser

# Dependency injection
gem "dry-container"            # IoC container
gem "dry-auto_inject"          # Dependency injection

# LLM integration (optional)
gem "ruby-openai"              # OpenAI API client

# Type annotations
gem "sorbet-runtime"           # Runtime type checking
gem "rbs"                      # Ruby type signatures

# Code quality analysis helpers
gem "rubocop-ast"              # RuboCop AST utilities
gem "reek"                     # Code smell detector

# GitHub API
gem "octokit"                  # GitHub API client
gem "faraday-retry"            # Retry middleware for API calls

# Standard library (required for Ruby 3.4+)
gem "csv"                      # CSV parsing

# Testing
gem "rspec", group: :test

# Development
group :development do
  gem "pry"                    # Debugging
  gem "yard"                   # Documentation
end
